<%- include('../includes/head.ejs') %>
  <%- include('../includes/navigation.ejs') %>
  <div class="container border border-dark rounded">
      <form class="product-form mt-3" action="/admin/add-update" method="POST">
      <!-- title -->
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="Enter Title" required>
      </div>
      <!-- description -->
      <div class="form-group">
        <label for="description">Description</label>
        <textarea  class="form-control" name="description" id="description" rows="3" required></textarea>
      </div>
      <!-- expiry -->
      <div class="form-group">
          <label for="expiry">Expiry</label>
          <input type="date" class="form-control" name="expiry" id="expiry" required>
        </div>
      <!-- level -->
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="UNI" checked>
        <label class="form-check-label" for="university">
          University
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="CSE" >
        <label class="form-check-label" for="CSE">
          Computer Science
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="ECE" >
        <label class="form-check-label" for="ECE">
          Electronics and Communication
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="EEE" >
        <label class="form-check-label" for="EEE">
          Electronics and Communication
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="ME" >
        <label class="form-check-label" for="me">
          Mechanical Engineering
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="level"  value="CE" >
        <label class="form-check-label" for="ce">
          Civil Engineering
        </label>
      </div>

      <button type="submit" class="btn btn-primary mt-3 mb-3">ADD</button>

    </form>
  </div>

<%- include('../includes/end.ejs') %>